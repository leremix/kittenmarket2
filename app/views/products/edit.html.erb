<div class="Site-content">
  <div class="ui grid centered">
    <div class="four wide column center aligned">
      <div class="ui row">
        <div class="content">

          <h1>Editer un Poster</h1>

          <div class="meta">
              <span class="date">Renseignez tous les champs</span> </br>
          </div>
          <div class="description">
            <div class="ui big form">

              <%= form_for(@item, url: put_product_path, html: { method: :put }) do |f| %>

                <div class="field">
                  <%= f.label :title%><br>
                  <%= f.text_field :title %>
                </div>

                <div class="field">
                  <%= f.label :description %><br>
                  <%= f.text_area :description %>
                </div>


                <div class="field">
                  <%= f.label :price %><br>
                  <%= f.text_field :price %>
                </div>


                 <div class="field">
                  <%= f.label :image_url%><br>
                  <%= f.text_field :image_url%>
                </div>


                <div class="actions">
                  <%= f.submit "Enregistrer", class: 'ui button basic violet circular huge '%>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div> 
      <div class="row">
        <div class="content">
      

          <%= link_to 'Retour au dashboard', adminv_path %>          
        </div>
        
        
      </div>
    </div>
  </div>
</div>


