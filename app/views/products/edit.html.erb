<h1>Editer un Poster</h1>

<%= form_for @item, url: {action: "edit"}, html: {class: "nifty_form"} do |f| %>

  <p>
    <%= f.label :title%><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>


  <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>


  <p>
    <%= f.label :image_url%><br>
    <%= f.text_field :image_url%>
  </p>


  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', adminv_path %>
