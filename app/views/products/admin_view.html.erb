<div class="ui grid dark">
  

    <div class="four wide column">
     
      <div class="content text-center" style="padding: 10px;">
          <h2 class="title_medium">Nouvel article</h2>
          <div class="meta">
            <span class="date">Renseignez tous les champs</span> </br>
          </div>
          <div class="description">
            <div class="ui form">
              <%= form_for @item, url: {action: "create"} do |f| %>

                <div class="field">
                  <p><strong>Titre de l'item</strong></br>
                    <%= f.text_field :title %>
                  </p>
                </div>

                <div class="field">
                  <p><strong>Description du Poster</strong></br>
                    <%= f.text_area :description %>
                  </p>
                </div>

                <div class="field">
                  <p><strong>Prix du Poster</strong></br>
                    <%= f.text_field :price %>
                  </p>
                </div>

                <div class="field">
                  <p><strong>Poster</strong></br>
                    <%= f.text_field :image_url %>
                  </p>
                </div>

                <div class="actions">
                  <%= f.submit "Créer un produit", class:  'ui button circular violet basic inverted'%>
                </div>
              <% end %>
            </div>
          </div>
      </div>
   
    </div>
    

    <div class="twelve wide column">
      <div class="row"  style="padding: 10px;">

        <table class="ui very basic table grey inverted" style="padding: 10px;">
                <h1 class="title_medium">Liste des produits</h1>
          <thead>
              <tr><th>Produits</th>
              <th>Description</th>
              <th>Prix</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td>
                  <h4 class="ui image header">
                    <img src="<%= image_url "#{rand(10)}.jpg" %>" class="ui small rounded image">
                    <div class="content">
                    <%= item.title %>
                    <div class="sub header">
                    </div>
                    </div>
                  </h4>
                </td>
                <td><%= item.description %></td>
                <td><%= item.price %> €</td>
               
                <td><%= link_to 'Voir', product_path(:id => item.id), class: 'ui button basic mini circular violet inverted' %></td>
                <td><%= link_to 'Modifier', edit_path(:id => item.id), class: 'ui button basic green mini circular inverted' %></td>
                <td><%= link_to 'Supprimer', destroyitem_path(item.id), method: :delete, class: 'ui button basic red mini circular inverted' %></td>
              </tr>
            <% end %>
          </tbody>
        </table> 

      </div>

      
      <div class="row" style="padding: 10px;">

        <table class="ui very basic collapsing table grey inverted" style="padding: 10px;">  
          <h1 class="title_medium"> Liste des commandes </h1>

          <thead>
            <tr>
              <th>Description</th>
              <th>Prix</th>
              <th>Email</th>
              <th>N° de commande</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%order.items.each do |item|%>
                    <%=item.title%> /
                  <%end%>
                </td>
                <td><%=order.total_price.round(2)%> €</td>
                <td><%=order.user.email%></td>
                <td class="text-center"><%=order.id%></td>
              </tr>
            <% end %>
          </tbody>
        </table> 

      </div>
    </div>
</div>
