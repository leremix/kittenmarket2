<!DOCTYPE html>

<html>

<head>
  <title>Kitten </title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- CDN SEMANTIC UI -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js">

    <!-- FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Anton" rel="stylesheet">

</head>

  <body class="Site">
    
    <% if controller_name == "products" && action_name == "admin_view" %>
      <%= render "shared/header_dark" %>
      <% else %>
      <%= render "shared/header" %>
  <%end %>
    <%= render 'shared/message' %>
    <%= yield %>
    <% if controller_name == "products" && action_name == "admin_view" %>
      <%= render "shared/footer_dark" %>
      <% else %>
      <%= render "shared/footer" %>
  <%end %>
  </body>

</html>
