<div class="Site-content">
  <div class="ui grid" style= "padding: 10px;">
    <div class="row">




      <div class="four wide column">
        <h1 class="text-center">Mes informations</h1>
        <div class="ui centered card">
            <div class="content">
              <%= image_tag avatar_url(@user), class: "avatar-full" %>
            <div class="item">
              <i class="mail icon violet"></i>  <%= current_user.fullname %>
            </div>
            <div class="item">
              <i class="user icon violet"></i>  <%= current_user.email %>
            </div>
            <div class="item">
              <i class="phone icon violet"></i>  <%= @user.phone_number %>
            </div>
            <div class="item">
              <i class="marker icon violet"></i>  <span>Adresse</span>,<span> 13001 </span><span>Ville</span>
            </div>
            <div class="item">
              <i class="home icon violet"></i>  <%= @user.description %>
            </div>
          </div>
          <div>
      </div>
    </div>
  </div>
</div>
